    <!-- 引入样式 -->
    <% include ../include/header-res.ejs %>
    <!--<link rel="stylesheet" href="/css/index.css">-->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/froala-editor/2.8.5/css/froala_editor.pkgd.min.css"
          rel="stylesheet" type="text/css"/>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/froala-editor/2.8.5/css/froala_style.min.css" rel="stylesheet"
          type="text/css"/>
    <style>

        .main {
            background: white;
            /*min-height: auto;*/
        }

        .sidebar {
            height: 100%;
            border-right: 1px solid #e9e9e9;
        }

        .sidebar i {
            color: #333;
            margin-right: 5px;
        }

        .titleWrap {
            width: 100%;
            padding: 5px 10px;
            background: #eee;
            margin-bottom: 20px;
        }

        #title {
            border: 0;
            width: 100%;
            background: transparent;
            padding: 5px 10px;
            outline: none;
        }

        .editorWrap {
            min-height: 500px;
        }

        #editor {
            width: 100%;
            min-height: 500px;
            background: #eee;
        }

        #submit, #saveToDrafts {
            border: 1px solid #2b669a;
            border-radius: 5px;
            padding: 5px 15px;
            color: #2b669a;
            margin-right: 20px;
        }

        #submit:hover, #saveToDrafts:hover {
            background: #2b669a;
            color: white;
        }

        .editorTool {
            margin: 20px 0;
        }

        .editorTool .row {
            width: 100%;
            margin: 0 0 15px;
        }

        .editorTool .row span {
            margin-right: 10px;
        }

        .tagWrap {
            vertical-align: top;
        }

        .tagWrap .tip {
            margin: 10px 0;
        }

        .addTagBtn {
            color: #349EDF;
            border: none;
            outline: none;
        }

        .addTagBtn i {
            margin-right: 5px;
        }

        .tag {
            margin-right: 5px;
            display: inline-block;
        }

        .tag .tagName {
            min-width: 20px;
            max-width: 300px;
            overflow: hidden;
            background: #e9e9e9;
            padding: 3px 8px;
            border-radius: 2px;
            font-size: 12px;
            margin-right: 0 !important;
            outline: none;
            box-sizing: border-box;
            white-space: nowrap;
            display: inline-block;
            vertical-align: -5px;
        }

        .tag i {
            cursor: pointer;
            padding: 5px 2px;
            color: #aaa;
            font-weight: 100;
        }

        .tag i:hover {
            color: red;
        }

    </style>

</head>
<body>
<% include ../include/header.ejs %>

<section class="main container">
    <div class="row">
        <% include blogAside.ejs %>

        <div class="blogWrap col-6 col-md-10">
            <div class="titleWrap">
                <input id="title" type="text" placeholder="请输入文章标题" value="<%= blogObj.title %>">
            </div>
            <div class="editorWrap">
                <textarea name="content" id="editor"></textarea>
            </div>
            <div class="editorTool ">
                <div class="row">
                    <div class="inlineBlock">
                        <span>文章标签：</span>
                    </div>
                    <div class="inlineBlock tagWrap">
                        <div class="tagList">
                            <% let tags = blogObj.tags || [] %>
                            <% for(var i = 0; i < tags.length ; i++) { %>
                            <div class="tag">
                                <span class="tagName" contenteditable="true"><%= tags[i] %> </span>
                                <i class="fa fa-times" aria-hidden="true"></i>
                            </div>
                            <% } %>
                            <button class="addTagBtn"><i class="fa fa-plus" aria-hidden="true"></i>添加标签</button>
                        </div>
                        <div class="">
                            <p class="tip">最多添加5个标签</p>
                        </div>
                    </div>

                </div>
                <div class="row">
                    <span>文章类型:</span>
                    <select name="" id="blogType">
                        <option value="0">请选择分类</option>
                        <option value="1">原创</option>
                        <option value="2">转载</option>
                        <option value="3">翻译</option>
                    </select>
                </div>
                <div class="row">
                    <span>私密文章:</span><input type="checkbox" id="privateSwitch">
                </div>
                <div class="row">
                    <button id="submit">发表博客</button>
                    <button id="saveToDrafts" data-type="drafts">保存为草稿</button>
                </div>
            </div>
        </div>

    </div>
</section>

<% include ../include/footer-res.ejs %>
