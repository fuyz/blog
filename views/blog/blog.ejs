//                渲染时：修改博客界面
                $('.tag i').unbind().click(function () {
                    $(this).parent('.tag').remove();
                })
//                绑定tag事件
                $('.addTagBtn').click(function () {
                    let tag = $('.tagName:last').text().trim();
                    if ($('.tagName').length != 0 && tag == '') {
                        $('.tagName:last').focus();
                        return;
                    }
                    $(this).before(` <div class="tag">
                                        <span class="tagName" contenteditable="true"> </span>
                                        <i class="fa fa-times" aria-hidden="true"></i>
                                     </div>`);
                    $('.tagName:last').focus();
                    $('.tag i').unbind().click(function () {
                        $(this).parent('.tag').remove();
                    })
                })


//              如果是查看编辑， 有blog id
                if ('<%- blogObj.id %>') {
                    $('#editor').froalaEditor('html.set', `<%- blogObj.content %>`);
                    $('#blogType').val('<%- blogObj.type %>');
                    if('<%- blogObj.privated %>' == 'false'){
                        $('#privateSwitch').prop({checked: false});
                    }else {
                        $('#privateSwitch').prop({checked: true});
                    }
                }

                $('#submit, #saveToDrafts').click(function () {

                    let title = $('#title').val().trim();
                    let content = $('#editor').froalaEditor('html.get');
                    let createTime = new Date().getTime();
                    let type = $('#blogType').val();
                    let tags = [];
                    $.each($('.tagList .tagName'), function (i, e) {
                        let tag = $(e).text().trim();
                        if (tag != '') tags.push(tag);
                    })
                    if (title == '') {
                        showErrorMsg('请输入文章标题');
                        $('#title').focus();
                        return;
                    }
                    if (content == '') {
                        showErrorMsg('请输入文章内容');
                        $('#editor').focus();
                        return;
                    }
                    if (type == 0) {
                        showErrorMsg('请选择文章类型');
                        $('#blogType').focus();
                        return;
                    }


                    let obj = null;
                    let key = Boolean($(this).data('type') == 'drafts');
                    if (key) {
                        obj = {
                            id: '<%- blogObj.id %>',
                            title: title,
                            content: content,
                            type: type,
                            createTime: createTime,
                            author: '<%= user.name %>',
                            tags: tags,
                            privated: $('#privateSwitch')[0].checked,
                            drafts: true
                        }
                    } else {
                        obj = {
                            id: '<%- blogObj.id %>',
                            title: title,
                            content: content,
                            type: type,
                            createTime: '<%- blogObj.id %>' ? '' : createTime,
                            author: '<%= user.name %>',
                            tags: tags,
                            privated: $('#privateSwitch')[0].checked,
                        }
                    }

                    $('.loading-mask').show();
                    ajaxDataStringify('/blog', obj).then(function (res) {
                        $('.loading-mask').hide();
                        if (res.success) {
                            if (key) {
                                showTipsMsg('已保存到草稿箱！！！');
                            } else {
                                swal({
                                    title: "Good job!",
                                    text: '<%- blogObj.id %>' ? "修改成功！" : "发布成功！",
                                    icon: "success",
                                    buttons: {
                                        oper1: {
                                            text: '写新文章',
                                            value: 'write'
                                        },
                                        oper2: {
                                            text: '管理博文',
                                            value: 'back'
                                        },
                                        oper3: {
                                            text: '查看文章',
                                            value: "view"
                                        }
                                    },
//                                timer: 2000,
                                }).then((value) => {
                                    switch (value) {
                                        case "write":
                                            window.location.href = '/blog/index';
                                            break;
                                        case "view":
                                            if ('<%- blogObj.id %>') {
                                                window.location.href = '/manage/blogDetail/<%- blogObj.id %>';
                                            } else {
                                                window.location.href = '/manage/blogDetail/' + res.data.blogId;
                                            }
                                            break;
                                        case "back":
                                            window.location.href = '/manage/blogList';
                                            break;
                                        default:
                                            break;
                                    }
                                });
                            }

                        }
                    })

                });


            }
