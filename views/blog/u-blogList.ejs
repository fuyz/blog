<aside>

</aside>

<% include ../include/footer-res.ejs %>

<!--最近的文章列表-->
<script type="text/html" id="new_blog_template">
    {{ if list.length > 0 }}
    {{each list }}
    <li><a href="{{ '/common/blogDetail/'+ $value.id }}" target="_blank">{{ $value.title }}</a></li>
    {{ /each }}
    {{ /if }}
</script>
<!--全部文章列表-->
<script id="blog_template" type="text/html">
    {{ if list.length > 0 }}
    {{each list }}
    <li class="blog-item" data-articleid="{{ $value.id }}">
        {{ if $value.toTop }}
        <div class="topIcon">置顶</div>
        {{ /if }}
        <div class="item-title-box">
            {{ if $value.type == 1 }}
            <span class="item-title-type type-1">原</span>
            {{ else if $value.type == 2 }}
            <span class="item-title-type type-2">转</span>
            {{ else if $value.type == 3 }}
            <span class="item-title-type type-3">译</span>
            {{ /if }}
            <span class="item-title">
                <span>{{ $value.title }}</span>
            </span>
            <!--<p class="abstract">{{ $value.content.replace(/<[^>]+>/g, "").slice(0, 200) }}</p>-->
            <p class="abstract">{{ $value.content.replace(/(<\/?.+?\/?>|&nbsp;|&ldquo;|&rdquo;|&quot;)/g, "").slice(0,
                200) }}</p>
        </div>
        <!--<div class="item-abstract">{{@ $value.content.slice(0, 70) }}</div>-->
        <div class="item-info clear">
            <div class="left">
                <span>{{ $value.createTime | dateFormat }}</span>
                <span>阅读数：{{ $value.PV ? $value.PV : 0 }}</span>
                <span>评论数：{{ $value.commentNum ? $value.commentNum : 0 }}</span>
            </div>
            <% if(authorInfo.name == user.name){ %>
            <div class="right item-info-oper">
                {{ if $value.toTop }}
                <a class="toTop" data-key="0" href="javascript:void(0)">取消置顶</a>
                {{ else }}
                <a class="toTop" data-key="1" href="javascript:void(0)">置顶</a>
                {{ /if }}
                <a class="edit" href="javascript:void(0)">编辑</a>
                <a class="del" href="javascript:void(0)">删除</a>
            </div>
            <% } %>
        </div>
    </li>
    {{ /each }}
    {{ else }}
    <p class="noData">没有符合条件的文章</p>
    {{ /if }}
</script>
<!--分页-->
<script id="pagination_template" type="text/html">
    <li class="prePage">
        <a href="#" aria-label="Previous">上一页</a>
    </li>
    {{each list2 }}
    <li class="pageItem {{$value}}"><a href="#">{{ $index + 1 }}</a></li>
    {{ /each }}
    <li class="nextPage">
        <a href="#" aria-label="Next">下一页</a>
    </li>
</script>

<script>

    $(document).ready(function () {

        class Manage {
            constructor() {
                this.data = {
                    type: '',
                    sort: 'default'
                }
            }

            initial() {

                let author = location.search.split('=')[1];
                manage.data.author = decodeURIComponent(author);

//                只看原创
                $('#typeSwitch').change(function () {
                    let key = $(this).prop('checked');
                    if (key) {
                        manage.data.type = 1;
                        manage.getBlogList({type: 1, sort: manage.data.sort})
                    } else {
                        manage.data.type = '';
                        manage.getBlogList({sort: manage.data.sort})
                    }
                });
//                排序方式
                $('.filter-item').click(function () {
                    $('.filter-item').removeClass('on');
                    $(this).addClass('on');
                    let key = $(this).data('key');
                    manage.data.sort = key;
                    manage.getBlogList({sort: key, type: manage.data.type});
                });

                manage.getBlogList({});
                manage.getNewArticleList();
                manage.getTypeCount();

            }

            getBlogList(obj) {
//                let time = $('.year').val();
//                let type = $('.type').val();
//                let searchKey = $('#key').val().trim();
                ajaxData('post', '/getBlogs', {
//                    time: time,
                    type: obj.type ? obj.type : "",
//                    keyword: searchKey,
                    status: 'published',
                    pagesize: 10,
                    currentPage: obj.currentPage || 1,
                    author: manage.data.author,
                    sort: obj.sort
                }).then(function (res) {
                    if (res.success) {
                        let data = {
                            list: res.data.pageData,
                            status: manage.data.status
                        };
                        let str = template('blog_template', data);
                        $('.article-list').html(str);

                        let arr = new Array(res.data.totalPage);
                        arr[res.data.currentPage - 1] = 'active';
                        let data2 = {
                            list2: arr
                        };
                        let str2 = template('pagination_template', data2);
                        $('#paginationTemplate').html(str2);

                        setTimeout(function () {

                            $('.item-title').click(function () {
                                let id = $(this).parents('li').data('articleid');
                                window.open('http://' + location.host + '/common/blogDetail/' + id);
                            })

                            $('.del').unbind().click(function (e) {
                                e.stopPropagation();
                                let _this = this;
                                let id = $(this).parents('li').data('articleid');
                                swal({
                                    title: "删除",
                                    text: "确定删除该文章吗？",
                                    icon: "warning",
                                    buttons: {
                                        cancel: '取消',
                                        default: '删除',
                                    },
                                }).then(value => {
                                    switch (value) {
                                        case "default":
                                            ajaxData('post', '/deleteBlog', {
                                                id: id
                                            }).then(function (res) {
                                                if (res.success) {
                                                    $(_this).parents('li').fadeOut(1000, function () {
//                                                        manage.getBlogList({});
//                                                        manage.getBlogStatus({});
                                                    })
                                                }
                                            })
                                            break;
                                        default:
                                            break;
                                    }
                                })
                            });

                            $('.edit').unbind().click(function () {
                                let id = $(this).parents('li').data('articleid');
                                window.open('http://' + location.host + '/manage/blog/' + id);
                            });

                            $('.toTop').unbind().click(function () {
//                                let _this = this;
                                let key = $(this).data('key');
                                swal({
                                    title: key ? "置顶" : "取消置顶",
                                    text: "确定" + (key ? "置顶" : "取消置顶") + "该文章吗？",
                                    icon: "info",
                                    buttons: {
                                        cancel: '取消',
                                        default: '确定',
                                    },
                                }).then(value => {
                                    switch (value) {
                                        case "default":
                                            let id = $(this).parents('li').data('articleid');
                                            ajaxData('post', '/setOrCancelToTop', {
                                                id: id,
                                                toTop: key
                                            }).then(function (res) {
                                                if (res.success) {
//                                                    let cloneEle = $(_this).parents('li').clone();
//                                                    $(_this).parents('li').fadeOut();
//                                                    $('.article-list').prepend(cloneEle);
                                                    $('.filter-item').eq(0).click();
                                                }
                                            })
                                            break;
                                        default:
                                            break;
                                    }
                                })

                            })

                            $('.pageItem').unbind().click(function () {
                                let index = Number($(this).text());
                                if (res.data.currentPage != index) {
                                    manage.getBlogList({
                                        currentPage: index,
                                        sort: manage.data.sort,
                                        type: manage.data.type
                                    })
                                }
                            });
                            if (res.data.hasPrev) {
                                $('.prePage').unbind().click(function () {
                                    manage.getBlogList({
                                        currentPage: res.data.currentPage - 1,
                                        sort: manage.data.sort,
                                        type: manage.data.type
                                    })
                                });
                            } else {
                                $('.prePage').addClass('disabled');
                            }
                            if (res.data.hasNext) {
                                $('.nextPage').unbind().click(function () {
                                    manage.getBlogList({
                                        currentPage: res.data.currentPage + 1,
                                        sort: manage.data.sort,
                                        type: manage.data.type
                                    })
                                });
                            } else {
                                $('.nextPage').addClass('disabled');
                            }

                        }, 100)

                    }
                });

            }

            getNewArticleList() {
                ajaxData('post', '/getNewBlogs', {
                    author: '<%= authorInfo.name %>',
                }).then(function (res) {
                    if (res.success) {
                        let data = {
                            list: res.data,
                        };
                        let str = template('new_blog_template', data);
                        $('.newArticleList').html(str);

                    }
                })
            }

            getTypeCount() {
                ajaxData('post', '/getTypeCount', {
                    author: '<%= authorInfo.name %>',
                }).then(function (res) {
                    if (res.success) {
                        $('.author-type1 b').text(res.data.type1);
                        $('.author-type2 b').text(res.data.type2);
                        $('.author-type3 b').text(res.data.type3);
                    }
                })
            }

        }

        let manage = new Manage();
        manage.initial();
        template.defaults.imports.dateFormat = function (val) {
            return new Date(Number(val)).toLocaleString();
        };
        template.defaults.imports.typeFormat = function (val) {
            switch (val) {
                case '1':
                    return '原';
                    break;
                case '2':
                    return '转';
                    break;
                case '3':
                    return '译';
                    break;
                default:
                    return '不知道类型';
            }
        }


    });


</script>
</body>
</html>