<script>

    $(document).ready(function () {

        class HeadManage {
            constructor() {
                this.data = {
                    showAside: false,

                }
            }

            initial() {

//                显示用户信息
                let userInfo = JSON.parse(sessionStorage.getItem('user'));
                $('#user-name').text(userInfo.name);
                $('#user-email').text(userInfo.email);
//                显示侧边栏
                $('#menu').click(function () {
                    if (headManage.data.showAside) {
                        headManage.data.showAside = false;
                        $('.user-aside').animate({right: '-310px'});
                    } else {
                        headManage.data.showAside = true;
                        $('.user-aside').animate({right: 0});
                    }
                })
//                登出
                $('.logout').click(function () {
                    swal({
                        title: "退出登录",
                        text: "确定退出吗？",
                        icon: "warning",
                        buttons: {
                            cancel: true,
                            default: true,
                        },
                    }).then(value => {
                        switch (value) {
                            case "default":
                                window.location.href = '/logout';
                                break;
                            default:
                                break;
                        }
                    })
                });

            }
        }


        let headManage = new HeadManage();
        headManage.initial();


    });


</script>
